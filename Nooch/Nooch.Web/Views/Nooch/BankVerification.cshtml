@using System.Web.Mvc;
@using Nooch.Common.Entities;
@{
    Layout = null;

    Nooch.Common.Entities.BankVerification onLoadD = (Nooch.Common.Entities.BankVerification)ViewData["OnLoadData"];
    
}
 
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Nooch | Bank Verification</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Assets/Css/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Assets/Css/tweaks.css")" rel="stylesheet" />
    <link rel="icon" href="@Url.Content("~/Assets/favicon.ico")" />
    <meta name="apple-itunes-app" content="app-id=917955306" />
    <!-- JavaScript -->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css" />
    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->   

 </head>



<body style="background-color: rgba(230, 231, 232, 0.8);" id="body-depositNew">

    <form id="form1" runat="server">       
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="clearfix">
                <a class="landingHeaderLogo center-block" href="https://www.nooch.com/">
                    <img src="@Url.Content("~/Assets/Images/nooch-logo2.svg")" class="center-block" alt="Nooch Logo" />                   
                </a>
            </div>
        </nav>

        <div>

            <div id="r" runat="server">
                <div id="iconCircleFA" class="floating light-green-text m-t-10">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-check fa-stack-1x fa-inverse"></i>
                    </span>
                </div>
            </div>
            @if(onLoadD.Div1 == true)
            { 
            <div id="Div1" runat="server" visible="false">
            
                <div class="emailConfHeader">
                    <div style="font-size: 110%">Success!</div>
                    <div id="fromText">Your bank account has been verified.</div>
                </div>
            </div>
            }
            @if(onLoadD.Div2 == true)
            { 
            <div id="Div2" runat="server" visible="false">
                <div class="emailConfHeader">
                    <div style="font-size: 110%">Whoops</div>
                    <div id="Div3">Looks like your Bank account has already been confirmed.</div>
                </div>
            </div>
            }
            @if(onLoadD.openAppText == true )
            { 
            <div id="openAppText" runat="server" visible="false">
                <a href="nooch://" class="btn btn-lg btn-default center-block">Return to the Nooch app</a>
            </div>
            }
        </div>
    </form>

</body>
</html>
