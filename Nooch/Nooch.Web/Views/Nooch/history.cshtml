@using Nooch.Common.Entities.LandingPagesRelatedEntities.RejectMoney

@{
    Layout = null;
    PageLoadDataRejectMoney mod = (PageLoadDataRejectMoney)Model;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Nooch | Payment History</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,400italic,500,500italic,700,900" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/cupertino/jquery-ui.css" />

    <!-- Data Tables CSS -->
    <link href="~/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
    <link href="~/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
    <link href="~/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">

    <link rel="stylesheet" href="@Url.Content("~/Assets/Css/sweetalert-override.min.css")" />
    <link href="@Url.Content("~/Assets/Css/tweaks.css")" rel="stylesheet" />
    <link rel="icon" href="@Url.Content("~/Assets/favicon.ico")" />
</head>

<body id="body-depositNew" class="no-border">

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="clearfix">
            <a class="landingHeaderLogo center-block" href="https://www.nooch.com/">
                <img src="@Url.Content("~/Assets/Images/nooch-logo2.svg")" class="center-block" alt="Nooch Logo" />
            </a>
        </div>
    </nav>

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">

            <div class="col-lg-12" id="memListAllTableDiv">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">

                        <h5>All Payments</h5>

                        <div class="ibox-tools">
                        </div>

                    </div>

                    <div class="ibox-content">

                        <div class="row">
                        </div>
                        <table class="table table-striped table-bordered table-hover" id="AllMembers">
                            <thead>
                                <tr>
                                    <th>Trans ID</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Sender</th>
                                    <th>Recipient</th>
                                    <th>Amount</th>
                                    <th>Memo</th>
                                    <th>Location</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            <tbody id="TBOdy">

                                @foreach (TransactionClass ad in Model)
                                {
                                    <tr class="gradeX">

                                        <td><small>@ad.TransactionId</small></td>

                                        <td>@ad.TransactionType</td>

                                        <td id="@ad.TransactionId">
                                            @if (ad.TransactionStatus == "Pending")
                                            {
                                                <span class="text-primary">Pending</span>
                                            }
                                            else if (ad.TransactionStatus == "Cancelled" || ad.TransactionStatus == "Rejected")
                                            {
                                                <span class="text-danger"><strong>@ad.TransactionStatus</strong></span>
                                            }
                                            else if (ad.TransactionStatus == "Success")
                                            {
                                                <span class="text-success"><strong>@ad.TransactionStatus</strong></span>
                                            }
                                        </td>

                                        <td>@ad.TransactionDate1</td>

                                        <td><a href='@Url.Action("Detail", "Member", new { NoochId=@ad.SenderNoochId} )'>@ad.SenderName</a></td>

                                        <td><a href='@Url.Action("Detail", "Member", new { NoochId=@ad.RecepientNoochId} )'>@ad.RecipienName</a></td>

                                        <td><b>$@ad.Amount</b></td>

                                        <td>@ad.Memo</td>

                                        <td>
                                            <button type="button" id="btnLocation" class="btn btn-link btn-xs " onclick="showLocationModal('@ad.TransLati','@ad.TransLongi','@ad.state')">@ad.city @ad.state</button>
                                        </td>

                                        <td>
                                            @if (ad.TransactionStatus == "Pending")
                                            {
                                                <button type="button" data-val="@ad.TransactionId" class="btn btn-icon btn-xs btnCancel" onclick="statusCancel(@ad.TransactionId)" data-toggle="tooltip" data-placement="auto" title="Cancel this transaction">
                                                    <span class="fa-stack fa-lg">
                                                        <i class="fa fa-circle fa-stack-2x text-danger"></i>
                                                        <i class="fa fa-ban fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </button>

                                                <button type="button" data-val="@ad.TransactionId" class="btn btn-icon btn-xs btnRemind" data-toggle="tooltip" data-placement="auto" title="Send a reminder">
                                                    <span class="fa-stack fa-lg">
                                                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                                                        <i class="fa fa-bell fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="footer footer-landing">
        <div>
            <ul class="list-inline">
                <li><a href="https://www.nooch.com/overview">Security</a></li>
                <li><a href="http://support.nooch.com/">Support Center</a></li>
                <li><a href="https://www.nooch.com/tos">Legal Stuff</a></li>
                <li><a href="https://www.nooch.com/blog/">Blog</a></li>
            </ul>
        </div>
    </div>


    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <script src="@Url.Content("~/js/sweetalert.min.js")"></script>

    <script type="text/javascript">
        var errorFromCodeBehind = '@mod.errorFromCodeBehind';
        var transStatus = '@mod.transStatus';
    </script>

    <script src="@Url.Content("~/js/app/reject-money.js")"></script>
    <script src="../js/jquery.blockUI.min.js"></script>

    <script type="text/javascript">
    $(document).ready(function (e)
    {
        $(".btnCancel").click(function (e)
        {
            var data_val = $(this).attr('data-val');

            swal({
                title: "Are you sure?",
                text: "Do you want to cancel this transaction?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes - Cancel",
                closeOnConfirm: false
            }, function (isConfirm)
            {
                if (isConfirm) {
                    var url = "../Admin/CancelTransaction";
                    var data = {};
                    data.transactionId = data_val;

                    $.post(url, data, function (result)
                    {
                        if (result.IsSuccess == true) {
                            toastr.success(result.Message, 'Transaction cancelled successfully ')
                            swal("Done!", "Transaction cancelled successfully ", "success");

                            $("#" + data_val).html("<span class='text-danger'><strong>Cancelled</strong></span>");
                        }
                        else {
                            tostr.error(result.Message, 'Error');
                        }
                    });
                }
            });
        });
    });
    </script>
</body>
</html>
