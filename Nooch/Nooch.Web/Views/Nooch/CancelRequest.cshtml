@using Nooch.Common.Entities;

@{
    
    Layout = null;
    ResultCancelRequest rcr =(ResultCancelRequest) ViewData["OnLoaddata"];
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Assets/Css/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Assets/Css/tweaks.css")" rel="stylesheet" />
    @*<link rel="icon" href="../Assets/favicon.ico" />*@
    <meta name="apple-itunes-app" content="app-id=917955306">

    <!-- JavaScript -->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css" />
    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <script>
        $(function () {
            var iOS = false,
            p = navigator.platform;

            if (p === 'iPad' || p === 'iPhone' || p === 'iPod') {
                iOS = true;
				$('.iphoneLogin').removeClass('hidden');
            }
        });
    </script>

</head>
 

    <body style="background-color: rgba(230, 231, 232, 0.8);" id="body-depositNew">

        <form id="form1"  >

            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="clearfix">
                    <a class="landingHeaderLogo center-block" href="https://www.nooch.com/">
                      
                        <img src="@Url.Content("~/Assets/Images/nooch-logo2.svg")"  class="center-block" alt="Nooch Logo" />
                    </a>
                </div>
            </nav>
            @if (rcr.paymentInfo != "false") { 
            <div class="depositComplete-TransDetails paymentInfo" id="paymentInfo" runat="server">
                <div class="media">
                    <div class="transDetails-userpic pull-left">
                        
                        <img id="senderImage" src="@rcr.senderImage" class="media-object" alt="Other Guy" />
               
                    </div>

                    <div class="media-body">
                        <span class="intro-header label label-danger">Request To</span>
                        <div id="senderName">
                           
                            <label id="nameLabel"  >@rcr.nameLabel </label>

                        </div>
                        <span class="transfer-amount">
                            $
                            <label id="AmountLabel" >@rcr.AmountLabel</label>
                           
                        </span>
                    </div>
                </div>
            </div>
            }
            <div id="iconCircleFA" class="floating white-text col-sm-8 col-sm-offset-2 p-5">
                <span class="fa-stack fa-lg">
                    <i class="fa fa-circle fa-stack-1x"></i>
                    <i class="fa fa-times-circle fa-stack-1x fa-lg fa-inverse red-text"></i>
                </span>
            </div>

            <br />

            <div class="emailConfHeader">
                @if(rcr.reslt1=="true"){
                <div style="font-size: 110%">
                    <Label ID="reslt1"     >Request Cancelled</Label>
                </div>
                }
                <div id="fromText">
                    @if (rcr.reslt != "") { 
                    <Label ID="reslt"     >@rcr.reslt;  </Label>
                    }

                </div>
                <div class="iphoneLogin hidden"><a href="nooch://" class="btn btn-default">Click here to login to Nooch</a></div>
            </div>

            <div class="footer footer-landing">
                <div>
                    <ul class="list-inline">
                        <li><a href="https://www.nooch.com/overview">About</a></li>
                        <li><a href="https://www.nooch.com/safe">Security</a></li>
                        <li><a href="http://support.nooch.com/">Support Center</a></li>
                        <li><a href="https://www.nooch.com/tos">Legal Stuff</a></li>
                        <li><a href="https://www.nooch.com/blog/">Blog</a></li>
                    </ul>
                </div>
            </div>

        </form>

    </body>
 
</html>
<script src="~/Scripts/app/CancelRequest.js"></script>
 
