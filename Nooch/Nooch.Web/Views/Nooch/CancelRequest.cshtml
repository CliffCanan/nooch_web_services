@using Nooch.Common.Entities;

@{
    Layout = null;
    ResultCancelRequest rcr = (ResultCancelRequest)ViewData["OnLoaddata"];
}

<!DOCTYPE html>
<html>
<head>
    <title>Cancel Request | Nooch</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/cupertino/jquery-ui.css" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/Css/sweetalert-override.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/Css/tweaks.css")" />
    <link rel="icon" href="../Assets/favicon.ico" />
</head>

<body style="background-color: rgba(230, 231, 232, 0.8);" id="body-depositNew">

    <form id="form1">
        <input type="hidden" id="TransId" value="@rcr.TransId" />
        <input type="hidden" id="memberId" value="@rcr.memberId" />
        <input type="hidden" id="UserType" value="@rcr.UserType" />

        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="clearfix">
                <a class="landingHeaderLogo center-block" href="https://www.nooch.com/">
                    <img src="@Url.Content("~/Assets/Images/nooch-logo2.svg")" class="center-block" alt="Nooch Logo" />
                </a>
            </div>
        </nav>

        @if (rcr.showPaymentInfo != false)
        {
            <div class="depositComplete-TransDetails paymentInfo" id="paymentInfo">

                <div class="media">

                    <div class="transDetails-userpic pull-left">
                        <img id="senderImage" src="@rcr.senderImage" class="media-object" alt="Other Guy" />
                    </div>

                    <div class="media-body">
                        <span class="intro-header label label-danger">Request To</span>

                        <div id="senderName">
                            <label id="nameLabel">@rcr.nameLabel </label>
                        </div>

                        <span class="transfer-amount">
                            $
                            <span id="AmountLabel">@rcr.AmountLabel</span>
                        </span>
                    </div>
                </div>
            </div>
        }

        <div id="iconCircleFA" class="floating white-text col-sm-8 col-sm-offset-2 p-b-5">
            <span class="fa-stack fa-lg">
                <i class="fa fa-circle fa-stack-1x"></i>
                <i class="fa fa-times-circle fa-stack-1x fa-lg fa-inverse red-text"></i>
            </span>
        </div>

        @if (rcr.initStatus == "pending")
        {
            <div class="col-xs-2 col-xs-offset-5">
                <button id="CancelBtn" type="button" onclick="CancelReq();" class="btn btn-lg btn-danger btn-block">Cancel</button>
            </div>
        }

        <br />

        <div class="emailConfHeader">

            <div id="cancalledHdr" class="hidden" style="font-size: 110%">
                <label id="reslt1">Request Cancelled</label>
            </div>

            <div id="fromText" class="hidden">
                <label id="reslt">@rcr.resultMsg</label>
            </div>

            @*<div class="iphoneLogin hidden"><a href="nooch://" class="btn btn-default">Click here to login to Nooch</a></div>*@

        </div>

        <div class="footer footer-landing" style="position:fixed; bottom:1%;">
            <div>
                <ul class="list-inline">
                    <li><a href="https://www.nooch.com/overview">About</a></li>
                    <li><a href="https://www.nooch.com/safe">Security</a></li>
                    <li><a href="https://www.nooch.com/tos">Legal Stuff</a></li>
                </ul>
            </div>
        </div>

        <input type="hidden" id="init_status" value="@rcr.initStatus" />

    </form>

    <script src="//code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="../js/sweetalert.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <script src="~/js/app/CancelRequest.js"></script>
    <input type="hidden" id="CancelRequestFinal" value="@Url.Action("CancelRequestFinal", "Nooch")" />
</body>

</html>
